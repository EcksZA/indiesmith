<%= form_for [@store, @product], html: { multipart: true } do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :description %>
	<%= f.text_area :description, size: '24x6' %>

	<%= f.file_field :photo %>

	<%= f.hidden_field :store_id, value: @store.id %>

	<%= f.submit %>
<% end %>